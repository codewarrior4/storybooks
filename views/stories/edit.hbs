<h1 class="py-2">Edit Story</h1>
<form action="/stories/{{story._id}}" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" value="{{story.title}}" required class="form-control" name="title" id="" aria-describedby="emailHelpId" placeholder="">
    </div>
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <label for="story">Tell us your story</label>
        <textarea class="form-control" required name="body" id="story" rows="3">{{story.body}}</textarea>
    </div>
    <div class="form-group">
        <label for="">Status</label>
        <select class="custom-select" required name="status" id="status">
            
           {{#select story.status}}
                <option value="public" selected>public</option>
                <option value="private">private</option>
           {{/select}}
        </select>
    </div>
    <div class="row">
        <input type="submit" value="Add story" class="btn btn-primary mr-3">
        <a href="/dashboard" class="btn btn-danger">Cancel</a>
    </div>
</form>